generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  PROVIDER
  CUSTOMER
}

model AvailabilityRule {
  id          Int       @id @default(autoincrement())
  dayOfWeek   Int       // 0 = Söndag - 6 = Lördag
  startTime   String    // "HH:mm" ex: "10:00"
  endTime     String    // "HH:mm" ex: "18:00"
  userId      Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model User {
  id                Int               @id @default(autoincrement())   
  name              String
  email             String            @unique
  password          String   
  role              UserRole          
}

model Booking {
  id         Int       @id @default(autoincrement())
  date       DateTime  // Datum och tid för bokningen
  customerId Int
  providerId Int
}